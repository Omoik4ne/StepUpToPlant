<html>
<head>
    <title>Step Up To Plants!</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="assets/css/main.css" />
    <noscript><link rel="stylesheet" href="assets/css/noscript.css" /></noscript>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/sass")
</head>
<body class="is-preload">

    <!-- Wrapper -->
    <div id="wrapper" class="fade-in">
        <!-- Intro -->
        <div id="intro">
            <h1>
                Step up<br />
                to Plants !
            </h1>
            <p>
                Your own bountiful and environmentally friendly garden.
            </p>
            <ul class="actions">
                <li><a href="#header" class="button icon solid solo fa-arrow-down scrolly">Continue</a></li>
            </ul>
        </div>
        <!-- Header -->
        <header id="header">
            <a href="index.html" class="logo">Step up to Plants !</a>
        </header>
        <!-- Nav -->
        <nav id="nav">
            <ul class="links">
                <li class="active"><a class="@ViewBag.Home" href="/Home/Index">Sheets</a></li>
                <li><a class="@ViewBag.YourGarden" href="/Home/YourGarden">Your Garden</a></li>
                <li><a class="@ViewBag.Tips" href="/Home/Tips">Tips</a></li>
            </ul>
        </nav>
        @RenderBody()
        <footer>
            <!-- Copyright -->
            <div id="copyright">
                <ul><li>&copy; Untitled</li><li>Design: <a href="https://html5up.net">HTML5 UP</a></li></ul>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
